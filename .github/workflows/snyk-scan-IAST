name: .NET + Snyk Security Scan

on:
  push:
    branches: [ "main" ]

jobs:
  snyk-scan:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup .NET
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: 8.0.x

      - name: Install Snyk
        run: npm install -g snyk

      - name: Restore project
        run: dotnet restore

      - name: Snyk auth
        run: snyk auth ${{ secrets.SNYK_TOKEN }}

      - name: Snyk test for vulnerabilities
        run: snyk test --file=LibraryOnlineRentalSystem/LibraryOnlineRentalSystem.csproj --severity-threshold=medium
