name: Security Analysis - LibraryOnlineRentalSystem
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  security-scan:
    runs-on: ubuntu-latest
    steps:
      # 1. Checkout do código
      - uses: actions/checkout@v4

      # 2. Configuração do .NET 8
      - name: Setup .NET
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '8.0.x'

      # 3. Instalação do Snyk
      - name: Install Snyk CLI
        uses: snyk/actions/setup@master
        with:
          snyk-token: ${{ secrets.SNYK_TOKEN }}

      # 4. Análise de segurança (SCA + SAST)
      - name: Run Snyk Security Scan
        run: |
          # Analisa dependências NuGet
          snyk test --file=LibraryOnlineRentalSystem/LibraryOnlineRentalSystem.csproj --severity-threshold=high --json-file-output=snyk-deps.json
          
          # Analisa código-fonte C#
          snyk code test --severity-threshold=high --json-file-output=snyk-code.json

      # 5. Geração de SBOM
      - name: Generate SBOM
        uses: advanced-security/sbom-generator-action@v0.0.1
        env:
          GITHUB_TOKEN: ${{ github.token }}

      # 6. Upload de resultados
      - name: Upload Reports
        uses: actions/upload-artifact@v3
        with:
          name: security-reports
          path: |
            snyk-deps.json
            snyk-code.json
            sbom.spdx.json

      # 7. Testes unitários (opcional)
      - name: Run Tests
        run: |
          cd LibraryOnlineRentalSystem.Tests
          dotnet test
